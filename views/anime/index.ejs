<!-- Konten utama halaman anime -->
<h2 class="my-4">Anime List</h2>

<!-- Menampilkan welcome message -->
<p class="welcome-message">
    <%= user ? `Welcome, ${user.username}` : 'Welcome, Guest!' %>
</p>

<ul class="list-group">
    <% if (folders.length > 0) { %>
        <% folders.forEach(function(folder) { %>
            <li class="list-group-item">
                <a href="/anime/<%= folder %>" class="text-decoration-none"><%= folder %></a>
            </li>
        <% }); %>
    <% } else { %>
        <li class="list-group-item">No anime files found.</li>
    <% } %>
</ul>

<!-- Form upload hanya untuk admin di kanan atas -->
<% if (user && user.username === 'admin') { %>
    <div class="upload-form">
        <h3>Upload Anime File</h3>
        <form action="/upload/anime" method="POST" enctype="multipart/form-data" class="upload-form-container">
            <div class="form-group">
                <label for="folderName">Nama Folder:</label>
                <input type="text" name="folderName" id="folderName" required class="form-control">
            </div>
            <div class="form-group">
                <label for="file">Pilih File:</label>
                <input type="file" name="file" id="file" required class="form-control" multiple required>
            </div>
            <button type="submit" class="btn btn-primary">Upload</button>
        </form>
    </div>
<% } %>