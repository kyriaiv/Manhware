<!-- Main Content Section -->
<div class="container mt-5">
    <div class="row">
        <!-- Sidebar Section -->
        <div class="col-md-4">
            <h4 class="text-center">Profile</h4>

            <!-- Menampilkan foto profil -->
            <div class="profile-photo text-center mb-3">
                <% if (user.profile_photo) { %>
                    <img src="<%= user.profile_photo %>" alt="Profile Photo" width="180" height="180" class="rounded-circle" />
                <% } else { %>
                    <img src="/uploads/sung_jin_woo.jpg" alt="Default Profile Photo" width="180" height="180" class="rounded-circle" />
                <% } %>
            </div>

            <form action="/update-profile" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Username</label>
                    <input type="text" name="name" id="name" class="form-control" value="<%= user.username %>" required readonly>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" id="email" class="form-control" value="<%= user.email %>" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Change Password</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="New Password">
                </div>
                <button type="submit" class="btn btn-primary w-100">Update Profile</button>
            </form>

            <!-- Form untuk upload foto profil -->
            <form action="/profile/upload" method="post" enctype="multipart/form-data" class="mt-3">
                <label for="profilePhoto">Upload Profile Photo:</label>
                <input type="file" name="profilePhoto" id="profilePhoto" accept="image/*" required class="form-control-sm">
                <button type="submit" class="btn btn-primary mt-2 w-100 btn-sm">Upload</button>
            </form>
        </div>

        <!-- Manga Listings Section -->
        <div class="col-md-8">
            <h2 class="text-center mb-4">Featured Manga</h2>
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="/images/one_piece.jpg" class="card-img-top" alt="One Piece">
                        <div class="card-body">
                            <p class="card-text text-center">One Piece</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="/images/naruto.jpg" class="card-img-top" alt="Naruto">
                        <div class="card-body">
                            <p class="card-text text-center">Naruto</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="/images/attack_on_titan.jpg" class="card-img-top" alt="Attack on Titan">
                        <div class="card-body">
                            <p class="card-text text-center">Attack on Titan</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>